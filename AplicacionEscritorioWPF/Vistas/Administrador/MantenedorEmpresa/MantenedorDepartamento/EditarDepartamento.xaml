        xmlns:local="clr-namespace:AplicacionEscritorioWPF.Vistas.Administrador.MantenedorEmpresa.MantenedorDepartamento"
        mc:Ignorable="d"
        Title="EditarDepartamento" Height="450" Width="500.473">
